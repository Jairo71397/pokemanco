<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="belcevu.pokemon.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView" />

    <Button
        android:text="Press to Start"
        android:layout_width="150dp"
        android:id="@+id/but"
        android:layout_height="90dp"
        android:drawableRight="@drawable/pokebola"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pokebola"
        android:id="@+id/imageView3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pokebola"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/but"
        android:layout_toEndOf="@+id/but"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <ImageButton
        android:layout_height="110dp"
        app:srcCompat="@drawable/bienve"
        android:id="@+id/imageButton"
        android:layout_below="@+id/but"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:layout_width="200dp" />

</RelativeLayout>
