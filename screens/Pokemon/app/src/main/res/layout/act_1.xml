<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="belcevu.pokemon.Act_1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:text="Bulbasor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/but1"
                android:layout_weight="0.84"
                android:onClick="but1"
                android:background="@drawable/vulva"
                android:textColor="@android:color/background_dark" />

            <Button
                android:text="Ivysaur"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="but2"
                android:id="@+id/but2"
                android:layout_weight="1"
                android:background="@drawable/ivisur"
                android:textColor="@android:color/background_dark" />

            <Button
                android:text="Venasour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/but3"
                android:onClick="but3"
                android:layout_weight="1"
                android:background="@drawable/venasor"
                android:textColor="@android:color/background_dark" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:text="Charmander"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/but4"
                android:onClick="but4"
                android:layout_weight="1"
                android:background="@drawable/charmander"
                android:textColor="@android:color/background_dark" />

            <Button
                android:text="Charmilion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/but5"
                android:onClick="but5"
                android:layout_weight="1"
                android:background="@drawable/charmi"
                android:textColor="@android:color/background_dark" />

            <Button
                android:text="Charizar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/but6"
                android:onClick="but6"
                android:layout_weight="1"
                android:background="@drawable/chari"
                android:textColor="@android:color/background_dark" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:text="Squartle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/but7"
                android:onClick="but7"
                android:layout_weight="1"
                android:background="@drawable/scuero"
                android:textColor="@android:color/background_dark" />

            <Button
                android:text="Wardtortle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/but8"
                android:onClick="but8"
                android:layout_weight="1"
                android:background="@drawable/wardt"
                android:textColor="@android:color/background_dark" />

            <Button
                android:text="Blastoise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/but9"
                android:onClick="but9"
                android:layout_weight="1"
                android:background="@drawable/blastoise"
                android:textColor="@android:color/background_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:text="Victribell"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/but10"
                android:onClick="but10"
                android:layout_weight="1"
                android:background="@drawable/vagina"
                android:textColor="@android:color/background_dark" />

            <Button
                android:text="Weepinbell"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/but11"
                android:onClick="but11"
                android:layout_weight="1"
                android:background="@drawable/vagina_conojos"
                android:textColor="@android:color/background_dark" />

            <Button
                android:text="Bellsprout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/but12"
                android:onClick="but12"
                android:layout_weight="1"
                android:background="@drawable/furioso"
                android:textColor="@android:color/background_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/dragon"
                android:id="@+id/imageView5"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
